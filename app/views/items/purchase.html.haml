= render 'layouts/header'



%body
  %main.itemDetails-main
    .itemDetails-container
      .itemDetails-container__header
        .item__details__box__top
          %p購入内容の確認 


        .item__details__box__middle1
          %form.buy-form
            %p
              = image_tag @item.image
            %p
              = @item.name
            %p
              = "¥#{@item.price} 送料込み ポイントはありません"
            

            %p
              支払い金額
              = "¥#{@item.price}"
            %p
              = link_to "購入する", item_pay_path(@item.id), method: :post, class: "itemDetails-container__purchase__btn"
          

        .item__details__box__middle2
          .card__information
            支払い方法：クレジットカード
          .card__information__number
            = "**** **** **** #{@default_card_information.last4}"
          .card__information__exp
            = "有効期限：#{@default_card_information.exp_month.to_s}/#{@default_card_information.exp_year.to_s.slice(2,3)}"
          = image_tag "#{@card_src}", width: '40', height: '20', alt: @card_brand, id: "card_image"
          =link_to "#", class: "card__box__change" do  
            変更する

        .item__details__box__middle3
          .user__address
            配送先
          .user__address__number
            = "〒#{current_user.address_number}"
          .user__address__information
            = current_user.address_prefecture
            = current_user.address_name
            = current_user.address_block
            = current_user.address_building
          =link_to "#", class: "card__box__change" do  
            変更する

= render 'layouts/footer'