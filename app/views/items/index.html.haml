.main-container
  .popular
    %h2.popular__title 人気のカテゴリー
    .popular__body
      %ul.popular__body__list
        %li.popular__body__list__item
          = link_to "レディース", "/", class: "popular__body__list__btn"
        %li.popular__body__list__item
