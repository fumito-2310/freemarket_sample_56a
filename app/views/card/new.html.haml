%body
  %header.registCard-header
    .registCard-header__container
      %a.registCard-header__link{:href => ""}
        = image_tag 'logo.svg', class: 'regist-header__img'
      .steplist-container
        %ul.steplist-container__steplist
          %li.completed
            %span.bubble
            %p 会員情報
          %li.completed
            %span.bubble
            %p 電話番号認証
          %li.completed
            %span.bubble
            %p お届け先住所入力
          %li.entering
            %span.bubble
            %p 支払い方法
          %li
            %span.bubble
            %p 完了
  %main.registCard-main
    .registCard-container
      .registCard-container__header
        %p 支払い方法
      .registCard-container__form
        = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do       
          .registCard-container__form--text
            %p カード番号
            %p.registCard-container__form__required 必須
            -# %input{:placeholder => "　半角数字のみ", :type => "number"}/
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          = image_tag 'card.png', class: 'registCard-container__form__cardList'
          .registCard-container__form--text
            %p 有効期限
            %p.registCard-container__form__required 必須
            .registCard-container__form--deadline
              -# %select#exp_month{name: "exp_month", type: "text", class: "month registCard-container__form__month", required:"required"},[["01", 1,],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]]
              -# = select :exp_month, [["01", 1,],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]], class: "month registCard-container__form__month", name: "exp_month", type: "text", required:"required"
              -# 月
              %select#exp_month{name: "exp_month", type: "text", class: "month registCard-container__form__month", required:"required"}
                %option{:value => ""} --
                %option{:value => "1"} 01
                %option{:value => "2"} 02
                %option{:value => "3"} 03
                %option{:value => "4"} 04
                %option{:value => "5"} 05
                %option{:value => "6"} 06
                %option{:value => "7"} 07
                %option{:value => "8"} 08
                %option{:value => "9"} 09
                %option{:value => "10"} 10
                %option{:value => "11"} 11
                %option{:value => "12"} 12
              %span 月/
              -# = select :exp_year, [["19", 2019,],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029],["30",2030]], class: "year", name: "exp_year", type: "text", required:"required"
              -# 年
              -# = succeed "\u{3000}\u{5e74}" do
              -# %select#exp_year{name: "exp_year", type: "text", class: "year", required:"required}
              %select#exp_year{name: "exp_year", type: "text", class: "year"}
                %option{:value => ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年/
            .registCard-container__form--text
              %p セキュリティコード
              %p.registCard-container__form__required 必須
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
              -# %input{:placeholder => "　カード背面4桁もしくは3桁の番号", :type => "number"}/
            %a.registCard-container__form__about{:href => ""} カード背面の番号とは？
            .registAdress-container__form--submit
              = submit_tag '次へ進む',  id: "token_submit", class: 'register-profile__nextpage'
              -# %input{:type => "submit", :value => "次へ進む"}/
      %footer.registCard-footer
        .registCard-footer__rule
          %a{:href => ""} プライバシーポリシー
          %a{:href => ""} メルカリ利用規約
          %a{:href => ""} 特定商取引に関する表記
        .registCard-footer__logo
          %a{:href => ""}
            = image_tag 'logo-gray.svg'
        .registCard-footer__copyRight
          %p © 2019 TeamA