= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  = f.text_field :nickname, placeholder: '例) メルカリ太郎', required:"required"
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可', required:"required"
  = f.password_field :password, placeholder: '6文字以上', required:"required"
  = f.password_field :password_confirmation, placeholder: '6文字以上', required:"required"
  = f.text_field :last_name, placeholder: '例)  山田', class: "familyname-text", required:"required"
  = f.text_field :first_name, placeholder: '例)  彩', class: "familyname-text", required:"required"
  = f.text_field :last_name_kana, placeholder: '例)  ヤマダ', class: "familyname-text", required:"required"
  = f.text_field :first_name_kana, placeholder: '例)  アヤ', class: "familyname-text", required:"required"
  = f.number_field :birthdate_year, placeholder: "  --", class: "year", min:"1900", max:"2020", required:"required"
  = f.number_field :birthdate_month, placeholder: "  --", class: "month", min:"1", max:"12", required:"required"
  = f.number_field :birthdate_day, placeholder: "  --", class: "days", min:"1", max:"31", required:"required"

  = f.submit '次へ進む', class: 'register-profile__nextpage'