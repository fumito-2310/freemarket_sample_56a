= form_for @user, url: step4_signup_index_path, method: :get, html: {class: 'third-wrapper__box'} do |f|
  = f.text_field :last_name, placeholder: '例) 山田'
  = f.text_field :first_name, placeholder: '例) 彩'
  = f.text_field :last_name_kana, placeholder: '例) ヤマダ'
  = f.text_field :first_name_kana, placeholder: '例) アヤ'
  = f.text_field :address_number, placeholder: '例) 123-4567'
  = f.text_field :address_prefecture, placeholder: '例) 北海道'
  = f.text_field :address_name, placeholder: '例) 横浜市緑区'
  = f.text_field :address_block, placeholder: '例) 青山1-1-1'
  = f.text_field :address_building, placeholder: '例) 柳ビル103'
  = f.text_field :address_phone_number, placeholder: '例) 09012345678'
  = f.submit '次へ進む', class: 'register-profile__nextpage'